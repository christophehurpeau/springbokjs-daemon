{
  "name": "springbokjs-daemon",
  "version": "4.0.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": ["springbokjs", "utils", "gulp", "grunt"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=10.13.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "lint": "tsc && eslint --ext .js,.ts --quiet src",
    "postbuild": "tsc -p tsconfig.build.json",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "10",
        "formats": ["cjs", "es"]
      }
    ],
    "entries": ["index"]
  },
  "dependencies": {
    "@types/node": ">=10.0.0",
    "graceful-kill": "^2.0.0",
    "nightingale": "^9.2.3",
    "nightingale-console": "^6.1.1",
    "nightingale-logger": "^6.2.2",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@pob/eslint-config-babel-node": "37.0.0",
    "@pob/eslint-config-typescript": "37.0.0",
    "@pob/repo-config": "1.2.0",
    "@pob/version": "5.0.0",
    "@types/split": "1.0.0",
    "babel-preset-latest-node": "4.0.1",
    "eslint": "6.7.2",
    "husky": "3.1.0",
    "pob-babel": "24.0.1",
    "pob-release": "5.0.0",
    "prettier": "2.0.4",
    "repository-check-dirty": "1.0.3",
    "typescript": "3.7.3"
  }
}
