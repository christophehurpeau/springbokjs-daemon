{
  "name": "springbokjs-daemon",
  "version": "2.2.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": [
    "springbokjs",
    "utils",
    "gulp",
    "grunt"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=6.5.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "pob-build",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "lint": "eslint --ext .js,.jsx src/",
    "postcheckout": "./.git-hooks/post-checkout",
    "postmerge": "./.git-hooks/post-merge",
    "precommit": "./.git-hooks/pre-commit",
    "preparecommitmsg": "./.git-hooks/prepare-commit-msg ${GIT_PARAMS}",
    "preversion": "yarn run lint && yarn run build && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "lint-staged": {
    "package.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "dependencies": {
    "flow-runtime": "^0.14.0",
    "graceful-kill": "^1.0.1",
    "nightingale": "^6.2.1",
    "nightingale-console": "^2.5.1",
    "nightingale-logger": "^3.4.0",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-latest-node": "^0.4.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-config-pob": "^16.0.4",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "komet": "^0.1.4",
    "komet-karma": "^0.2.5",
    "lint-staged": "^4.0.4",
    "pob-babel": "^18.1.5",
    "pob-release": "^3.1.0",
    "prettier": "^1.6.1"
  }
}
