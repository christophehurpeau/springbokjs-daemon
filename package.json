{
  "name": "springbokjs-daemon",
  "version": "5.1.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": [
    "springbokjs",
    "utils",
    "gulp",
    "grunt"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=10.13.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "tsc && eslint --ext .js,.ts --quiet *.js src",
    "postbuild": "tsc -p tsconfig.build.json",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "test": "jest",
    "test:watch": "jest",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    },
    "testEnvironment": "node"
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "10",
        "formats": [
          "cjs",
          "es"
        ]
      }
    ],
    "entries": [
      "index"
    ],
    "jsx": false
  },
  "dependencies": {
    "@types/node": ">=10.0.0",
    "graceful-kill": "^3.0.1",
    "nightingale": "^10.0.1",
    "nightingale-console": "^10.0.1",
    "nightingale-logger": "^10.0.1",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.5",
    "@pob/commitlint-config": "1.1.2",
    "@pob/eslint-config": "39.0.0",
    "@pob/eslint-config-node": "39.0.0",
    "@pob/eslint-config-typescript": "39.0.3",
    "@pob/eslint-config-typescript-node": "39.0.0",
    "@pob/root": "2.2.2",
    "@types/jest": "25.2.3",
    "@types/split": "1.0.0",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "babel-jest": "26.1.0",
    "babel-preset-latest-node": "4.1.0",
    "eslint": "7.5.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-unicorn": "21.0.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "pob-babel": "24.14.0",
    "pob-lcov-reporter": "2.4.0",
    "pob-release": "5.6.2",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  }
}
