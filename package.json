{
  "name": "springbokjs-daemon",
  "version": "3.0.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": ["springbokjs", "utils", "gulp", "grunt"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=8.3.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "lint": "tsc && eslint --ext .ts src/",
    "postbuild": "tsc -p tsconfig.build.json",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "yarn.lock": ["yarn-update-lock", "git add"],
    "{package.json,.eslintrc.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "src/**/*.json": ["prettier --parser json --write", "git add"],
    "src/**/*.{js,ts}": ["eslint --fix --quiet", "git add"]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "dependencies": {
    "@types/node": ">=8.0.0",
    "graceful-kill": "^2.0.0",
    "nightingale": "^9.0.1",
    "nightingale-console": "^5.0.0",
    "nightingale-logger": "^6.0.0",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@pob/eslint-config-babel": "29.0.1",
    "@pob/eslint-config-babel-node": "29.0.1",
    "@pob/eslint-config-typescript": "29.0.1",
    "@types/split": "1.0.0",
    "babel-preset-latest-node": "3.1.0",
    "eslint": "5.15.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "pob-babel": "23.7.1",
    "pob-release": "4.9.0",
    "prettier": "1.16.4",
    "repository-check-dirty": "1.0.2",
    "typescript": "3.3.3333",
    "yarn-update-lock": "0.3.3",
    "yarnhook": "0.4.0"
  }
}
