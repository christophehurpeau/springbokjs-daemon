{
  "name": "springbokjs-daemon",
  "version": "5.0.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": [
    "springbokjs",
    "utils",
    "gulp",
    "grunt"
  ],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=10.13.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "lint": "tsc && eslint --ext .js,.ts --quiet *.js src",
    "postbuild": "tsc -p tsconfig.build.json",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "10",
        "formats": [
          "cjs",
          "es"
        ]
      }
    ],
    "entries": [
      "index"
    ]
  },
  "dependencies": {
    "@types/node": ">=10.0.0",
    "graceful-kill": "^2.0.0",
    "nightingale": "^9.2.3",
    "nightingale-console": "^6.1.1",
    "nightingale-logger": "^6.2.2",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@pob/commitlint-config": "1.1.1",
    "@pob/eslint-config": "37.0.1",
    "@pob/eslint-config-babel-node": "37.0.1",
    "@pob/eslint-config-node": "37.0.1",
    "@pob/eslint-config-typescript": "37.0.1",
    "@pob/root": "1.4.0",
    "@types/split": "1.0.0",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "babel-preset-latest-node": "4.1.0",
    "eslint": "6.8.0",
    "eslint-import-resolver-node": "0.3.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-unicorn": "18.0.1",
    "husky": "4.2.4",
    "pob-babel": "24.8.1",
    "pob-release": "5.5.4",
    "prettier": "2.0.4",
    "typescript": "3.8.3"
  }
}
