{
  "name": "springbokjs-daemon",
  "version": "3.0.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": ["springbokjs", "utils", "gulp", "grunt"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=8.3.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build && tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "lint": "npm run typescript-check && eslint --ext .ts  src/",
    "preversion": "yarn run lint && yarn run build && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "typescript-check": "tsc --noEmit",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "src/**/*.json": ["prettier --parser json --write", "git add"],
    "src/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "dependencies": {
    "@types/node": ">=8.0.0",
    "graceful-kill": "^2.0.0",
    "nightingale": "^9.0.1",
    "nightingale-console": "^5.0.0",
    "nightingale-logger": "^6.0.0",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@types/split": "1.0.0",
    "babel-eslint": "10.0.1",
    "babel-preset-latest-node": "3.0.1",
    "eslint": "5.12.0",
    "eslint-config-pob": "25.0.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-typescript": "0.14.0",
    "husky": "1.2.0",
    "lint-staged": "8.1.0",
    "pob-babel": "23.5.0",
    "pob-release": "4.6.1",
    "prettier": "1.15.3",
    "typescript": "3.2.2",
    "typescript-eslint-parser": "21.0.2",
    "yarnhook": "0.3.0"
  }
}
