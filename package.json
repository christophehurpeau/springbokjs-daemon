{
  "name": "springbokjs-daemon",
  "version": "2.6.0",
  "description": "Springbok Daemon, usable with Gulp and Grunt to restart your server on watch",
  "keywords": ["springbokjs", "utils", "gulp", "grunt"],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/springbokjs-daemon.git",
  "homepage": "http://springbokjs.org",
  "engines": {
    "node": ">=6.5.0"
  },
  "main": "lib/index.js",
  "typings": "./dist/index.d.ts",
  "module:node": "./dist/index-node8.es.js",
  "module:node-dev": "./dist/index-node8-dev.es.js",
  "scripts": {
    "build": "pob-build && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "clean": "rm -Rf docs dist",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "tsc --noEmit && eslint --ext .ts  src/",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && yarn run build && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": ["prettier --write", "git add"],
    "src/**/*.json": ["prettier --write", "git add"],
    "src/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "dependencies": {
    "@types/node": "^9.6.6",
    "graceful-kill": "^1.3.0",
    "nightingale": "^8.0.0",
    "nightingale-console": "^4.0.0",
    "nightingale-logger": "^5.0.0",
    "split": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/split": "^0.3.28",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-preset-latest-node": "^2.0.0-beta.2",
    "eslint": "^4.19.1",
    "eslint-config-pob": "^19.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-typescript": "^0.11.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "pob-babel": "^22.0.2",
    "pob-release": "^4.0.0",
    "prettier": "^1.12.1",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0",
    "yarnhook": "^0.2.0"
  }
}
